<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#222266"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TableRow>

            <TextView
                android:id="@+id/fixText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:text="WiFi Networks Found: 0"
                android:textColor="#8888EE"
                android:textSize="14dp" />
        </TableRow>
		
	        <TableLayout
	            android:id="@+id/TableLayout01"
	            android:layout_width="fill_parent"
	            android:layout_height="2dip"
	            android:background="#8888EE"
	            android:paddingLeft="8dp"
	            android:paddingRight="8dp" >
	        </TableLayout>
		
        <TableRow android:baselineAligned="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="200"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="1dp"
                android:paddingTop="16dp" >

                <TextView
                    android:id="@+id/statusText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="WLCK"
                    android:textColor="#8888EE"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/statusText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="OPEN"
                    android:textColor="#8888EE"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <!-- <TextView -->
                <!-- android:id="@+id/statusText3" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:text="RCAL" -->
                <!-- android:textSize="12dp" -->
                <!-- android:textStyle="bold" -->
                <!-- android:textColor="#8888EE" -->
                <!-- android:gravity="left" -->


                <!-- /> -->

            </LinearLayout>

            <TextView
                android:id="@+id/mainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="right"
                android:paddingBottom="12dp"
                android:paddingLeft="1dp"
                android:paddingRight="8dp"
                android:paddingTop="12dp"
                android:text="   --- "
                android:textColor="#8888EE"
                android:textSize="64dp" />

            <TextView
                android:id="@+id/mainText2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:gravity="right"
                android:text="dBm "
                android:textColor="#8888EE"
                android:textSize="32dp" />
            
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/menubar2"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#8888EE"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >
    </TableLayout>

    <LinearLayout
        android:id="@+id/mainll"
        android:layout_width="fill_parent"
        android:layout_height="74dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#8888EE"
            android:text="0%" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#8888EE"
            android:text="100%" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/menubar3"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#8888EE"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TableRow>

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:text="SSID:"
                android:textColor="#8888EE"
                android:textSize="14dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:text="BSSID:"
                android:textColor="#8888EE"
                android:textSize="14dp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/menubar4"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#8888EE"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >
    </TableLayout>

    <!-- <Button -->
